<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    package="ch.maxant.checker">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Checker"
        tools:targetApi="28"
    >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Checker.NoActionBar"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- https://stackoverflow.com/a/6392009/458370
        <service
            android:exported="true"
            android:name=".MainService"
            android:label="Checker Service"
        >
            <intent-filter>
                <action android:name="ch.maxant.checker.MainService" />
            </intent-filter>
        </service>
        -->

        <receiver
            android:enabled="true"
            android:exported="true"
            android:name=".StartMyActivityAtBootReceiver"
            android:label="StartMyActivityAtBootReceiver"
        >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>